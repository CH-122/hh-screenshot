    <style>
        :root {
            --text-primary-color: white;
            --text-regular-color: white;
        }

        .card-primary {
            width: 702px;
            /* relative w-full rounded-32px */
            background-image: url(https://staticfile.eduplus.net/qcard/default/qcard_240603_style1-bg1.png);
            background-size: 100% 100%;
            background-position: center;
        }



        .card-container {
            /* 原来的样式保持不变 */
        }

        .card-wrapper {
            height: 372px;
            border-radius: 32px;
            box-sizing: border-box;
        }

        .card-inner {
            display: flex;
            padding-top: 36px;
            padding-left: 60px;
            padding-right: 44px;
            height: 372px;
            border-radius: 32px;
            box-sizing: border-box;
        }

        .card-content {
            display: flex;
            flex-direction: column;
            min-width: 0;
            flex: 1;
        }

        .card-header {
            display: flex;
            flex-direction: column;
            flex: 1;
            /* 原来的样式保持不变 */
        }

        .card-title {
            color: var(--text-primary-color);
            font-size: var(--text-lg-size);
            font-weight: 600;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            line-height: 40px;
        }

        .card-position {
            margin-top: 16px;
            height: 32px;
            color: var(--text-regular-color);
            font-size: var(--text-xs-size);
            font-weight: 600;
            line-height: 32px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .card-info {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            padding-bottom: 30px;
            gap: 10px;
            box-sizing: border-box;
        }

        .card-info-item {
            display: flex;
            align-items: center;
        }

        .card-info-icon {
            width: 28px;
            height: 28px;
            flex-shrink: 0;
        }

        .card-info-text {
            margin-left: 18px;
            color: var(--text-primary-color);
            font-size: var(--text-xs-size);
            font-weight: 400;
            line-height: 32px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .card-avatar-container {
            margin-left: 12px;
            width: 172px;
            height: 172px;
        }

        .card-avatar-wrapper {
            margin-top: 26px;
            padding: 10px;
            width: 166px;
            height: 166px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.6);
        }

        .card-avatar {
            width: 100%;
            height: 100%;
            border-radius: 50%;
        }
    </style>
    </div>
</body>

</html>